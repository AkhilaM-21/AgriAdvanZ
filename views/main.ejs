 <script>
document.getElementById("logoutBtn").addEventListener("click", async (e) => {
    e.preventDefault(); 

    try {
        const response = await fetch("http://localhost:8000/logout", {
            method: "POST",
            headers: {
                "Authorization": `Bearer ${localStorage.getItem('token')}`
            }
        });

        const data = await response.json();
        if (response.ok) {
            alert("Logged out successfully!");
            localStorage.removeItem('token');
            window.location.href = "/";
        } else {
            alert(data.error || "Logout failed!");
        }
    } catch (err) {
        alert("Server error. Try again later.");
    }
});


async function deactivateAccount() {
  const token = localStorage.getItem('token');

  if (!token) {
    alert("No token found. Please log in again.");
    return;
  }

  const confirmed = confirm("Are you sure you want to deactivate your account?");
  if (!confirmed) return;

  try {
    const response = await fetch("/deactivate", {
      method: "POST",
      headers: {
        "Authorization": `Bearer ${token}`,
        "Content-Type": "application/json"
      }
    });

    const result = await response.json();

    if (!response.ok) {
      throw new Error(result.error || "Failed to deactivate account.");
    }

    alert("Your account has been deactivated and deleted.");
    localStorage.removeItem('token');
    window.location.href = "/register";

  } catch (error) {
    console.error("Error during deactivation:", error);
    alert("Server error. Please try again later.");
  }
}

document.getElementById("deactivateBtn").addEventListener("click", (e) => {
  e.preventDefault();
  deactivateAccount();
});

</script>
<div id="update" class="card p-3 mb-4" style="display: none;">
  <h4>You can edit your info</h4>
  <form id="editForm" class="mb-4">
    <input type="hidden" id="farmerId">
    <div class="mb-2"><input type="text" id="farmername" class="form-control" placeholder="Farmer Name" required></div>
    <div class="mb-2"><input type="text" id="phonenumber" class="form-control" placeholder="Phone Number" required></div>
    <div class="mb-2"><input type="password" id="password" class="form-control" placeholder="Password" required></div>
    <div class="mb-2"><input type="number" id="land" class="form-control" placeholder="Land (acres)" required></div>
    <div class="mb-2"><input type="number" id="income" class="form-control" placeholder="Income" required></div>
    <div class="mb-2"><input type="number" id="investment" class="form-control" placeholder="Investment" required></div>
    <button type="submit" class="btn btn-primary form-button">Save</button>
    <button type="button" class="btn btn-secondary" onclick="hideUpdateCard()">Cancel</button>
  </form>
</div>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const updateBtn = document.getElementById("updatebtn");
    const updateCard = document.getElementById("update");

    updateBtn.addEventListener("click", async (e) => {
      e.preventDefault();

      if (updateCard.style.display === "block") {
        hideUpdateCard();
        return;
      }

      const farmerId = localStorage.getItem("farmerId"); 
      if (!farmerId) {
        alert("Farmer ID not found. Please log in again.");
        return;
      }

      await loadFarmer(farmerId);
      updateCard.style.display = "block";
      updateCard.scrollIntoView({ behavior: "smooth" });
    });
  });

  function hideUpdateCard() {
    document.getElementById("update").style.display = "none";
  }

  async function loadFarmer(id) {
    try {
      const response = await fetch(`http://localhost:8000/api/farmers/${id}`);
      const f = await response.json();

      document.getElementById('farmerId').value = f.id;
      document.getElementById('farmername').value = f.farmername;
      document.getElementById('phonenumber').value = f.phonenumber;
      document.getElementById('land').value = f.land;
      document.getElementById('income').value = f.income;
      document.getElementById('investment').value = f.investment;
      document.getElementById('password').value = ""; 
    } catch (err) {
      alert("Failed to load farmer data");
      console.error(err);
    }
  }

  document.getElementById('editForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const id = document.getElementById('farmerId').value;
    if (!id) {
      alert("Farmer ID is missing.");
      return;
    }

    const farmername = document.getElementById('farmername').value;
    const phonenumber = document.getElementById('phonenumber').value;
    const password = document.getElementById('password').value;
    const land = document.getElementById('land').value;
    const income = document.getElementById('income').value;
    const investment = document.getElementById('investment').value;

    try {
      const response = await fetch(`http://localhost:8000/api/farmers/${id}`, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ farmername, phonenumber, password, land, income, investment })
      });

      if (response.ok) {
        alert("Record updated successfully!");
        hideUpdateCard();
      } else {
        const data = await response.json();
        alert(data.error || "Update failed");
      }
    } catch (err) {
      alert("Server error while updating farmer");
      console.error(err);
    }
  });
</script>


