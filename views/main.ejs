            <form id="fertilizerForm">
              <label>Crop:
                <input type="text" id="crop" class="form-control" placeholder="e.g., Rice, Wheat">
              </label>
              <label class="mt-2">Soil Type:
                <select id="soil" class="form-control">
                  <option value="clay">Clay</option>
                  <option value="loam">Loam</option>
                  <option value="sandy">Sandy</option>
                </select>
              </label>
              <button type="button" onclick="suggestFertilizer()" class="btn btn-success mt-3">Get Suggestion</button>
            </form>
            <div id="fertilizerResult" class="mt-3 fw-bold text-primary"></div>
          </div>

          <script>
            function suggestFertilizer() {
              const crop = document.getElementById("crop").value.toLowerCase();
              const soil = document.getElementById("soil").value;
              let result = "Suggested NPK (kg/ha): ";

              if (crop.includes("rice")) {
                result += soil === "clay" ? "120:60:40" : "100:50:30";
              } else if (crop.includes("wheat")) {
                result += soil === "loam" ? "90:40:40" : "80:35:30";
              } else if (crop.includes("maize")) {
                result += "110:55:40";
              } else {
                result += "Refer to crop-specific agronomy data.";
              }

              document.getElementById("fertilizerResult").textContent = result;
            }
